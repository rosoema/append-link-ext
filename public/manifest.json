{
  "short_name": "Link Appender",
  "name": "Link Appender",
  "description": "Easily append your links. Create a base link, input the title and your base URL. Next step: Append your links!",
  "version": "1.0.0",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "http://*/*", 
    "https://*/*"
  ],
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": "icon.png",
    "default_title": "Link Appender"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}